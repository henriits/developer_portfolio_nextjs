datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  description  String
  githubLink   String?
  liveLink     String?
  imageUrl     String? // Optional field for storing the image URL
  technologies String[] // Array of strings to store technologies
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index(slug)
}
